<div class="flex flex-col gap-4 bg-white p-11 rounded-lg">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex gap-4 flex-col"}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs flex flex-col gap-4">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first_name", class: "flex flex-col gap-4" }
      %>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "second_name", class: "flex flex-col gap-4" }
      %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "flex flex-col gap-4" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "flex flex-col gap-4" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "flex flex-col gap-4" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: 'btn-primary' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
