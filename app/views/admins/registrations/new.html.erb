<div class="flex flex-col gap-4 bg-white p-11 rounded-lg">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex gap-4 flex-col"}) do |f| %>
    <div class="form-inputs flex flex-col gap-4">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "flex flex-col gap-4" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "flex flex-col gap-4" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: 'btn-primary' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
